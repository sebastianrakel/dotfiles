[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5


[colors]
;background = ${xrdb:color0:#222}
background = #002b36
background-alt = #073642
;foreground = ${xrdb:color7:#222}
foreground = #93a1a1
foreground-alt = #eee8d5
primary = #ffb52a
secondary = #e60053
alert = #bd2c40


[bar/0]
width = 100%
height = 28
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.foreground}

border-size = 0
border-color = ${colors.foreground}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Monospace:style=Regular:size=16;1
font-1 = Font Awesome 5 Free:pixelsize=16;1
font-2 = Font Awesome 5 Free Solid:pixelsize=16;1
font-3 = Font Awesome 5 Brands:pixelsize=16;1

tray-position = right
tray-padding = 2
tray-maxsize = 26
tray-background = ${colors.background}

bottom = true

[bar/1]
inherit = bar/0
monitor = ${env:MONITOR:HDMI-1}
modules-left = herbstluftwm
modules-center = xwindow

[bar/loki]
inherit = bar/1
monitor = ${env:MONITOR:HDMI-1}
modules-right = mail-sync space battery0 space battery1 space date

[bar/odin]
inherit = bar/1
monitor = ${env:MONITOR:HDMI-1}
modules-right = mail-sync space octo space date space

[bar/openbox]
inherit = bar/0
modules-right = mail-sync space octo space date space

[bar/ws-rakel-seb.landwehr.it]
inherit = bar/0
monitor = ${env:MONITOR:HDMI-1}
modules-right = date space

[module/space]
type = custom/text
content = " "
content-foreground = ${colors.background}
content-background = ${colors.background}
content-font = 3

[module/tmux-sessions]
type = custom/script

exec = tmux ls | wc -l
interval = 10

format-prefix = " "

[module/unread-mail]
type = custom/script

exec = notmuch search tag:unread and tag:inbox | wc -l
interval = 10


format-prefix = " "
label = %output:0:15%


[module/ewmh]
type = internal/xworkspaces

pin-workspaces = false
enable-click = false
enable-scroll = false

format = <label-state>

label-monitor = %name%

label-active = %name%
label-active-foreground = #ffffff
label-active-background = #3f3f3f
label-active-underline = #fba922

label-occupied = %name%
label-occupied-underline = #555555

label-urgent = %name%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-underline = #9b0a20

label-empty = %name%
label-empty-foreground = #55

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%


[module/date]
type = internal/date
interval = 5

date = %Y-%m-%d
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = " "
format-prefix-foreground = ${colors.foreground}
;format-underline = #0a6cf5
format-background = ${colors.background}

label = %date% %time%

[module/battery0]
type = internal/battery
full-at = 95

battery = BAT0
adapter = AC

poll-interval = 5
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

bar-capacity-width = 10

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

animation-charging-framerate = 750
format-background = ${colors.background}

[module/battery1]
inherit = module/battery0

battery = BAT1

[module/herbstluftwm]
type = custom/script

exec-if = ps -C herbstluftwm >/dev/null 2>&1
exec = ~/.config/polybar/herbstluftwm.sh
tail = true
format-background = ${colors.background}

[module/octo]
type = custom/script

exec-if = ~/.bin/local/octo_status.py
exec = ~/.bin/local/octo_status.py
tail = true
format-prefix = " "
format-background = ${colors.background}
click-left = xdg-open "http://192.168.20.29"

[module/mpd]
type = internal/mpd

host = /home/sebastian/.mpd/socket

interval = 2
format-online = <icon-prev> <icon-stop> <toggle> <icon-next> 
label-song = %artist% - %title%
label-time = %elapsed%/%total%
label-offline = mpd is offline

icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 
icon-next = 

toggle-on-foreground = #ff
toggle-off-foreground = #55
bar-progress-width = 45
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─

[module/mail-sync]
type = custom/script

exec = cat ${HOME}/.cache/mail-sync
format-prefix = " "
interval = 1
click-left = systemctl --user start mail-sync.service

