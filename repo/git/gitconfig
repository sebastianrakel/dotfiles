[push]
    default = simple
    
[merge]
    tool = gvimdiff
    
[core]
    editor = vim
    excludesfile = /home/sebastian/.gitignore
        
[alias]
    co = checkout
    ci = commit
    st = status
    sts = status -s
    br = branch
    type = cat-file -t
    dump = cat-file -p
    sl = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=iso --decorate=short
    l = log --graph --pretty=format:'%C(yellow)%h %Cblue%an%Cgreen%d %Cred(%ad) %Creset%s' --date=relative --decorate=short
    pu = push
    pl = pull
    
[commit]
    gpgsign = true    

[http]
    emptyAuth = true

[include]
    path = /home/sebastian/.config/git/conf.d
