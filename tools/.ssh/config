# jumphost
# # username delimiter = (last has to be the ssh username using -l or @)
# # port delimiter :
# # host delimiter +
# # example: ssh user2@user1=host1+host2
# # example: ssh user3@user1=host1+user2=host2+host3

Host *+*
ProxyCommand ssh -S none $(echo %h | sed -e 's/+[^+]*$//; s/\([^+=]*\)=\([^+]*\)$/\2 -l \1/; s/^\([^+:]*\):\([0-9]*\)+/-p \2 \1+/' ) -W $(echo %h | sed -e 's/^.*+//; s/:.*$//;'):$(echo %h | sed -e ' s/^.*+//; /:/!s/^.*/22/; s/^.*://' ;)
